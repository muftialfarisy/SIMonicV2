<?xml version="1.0" encoding="utf-8"?>



<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cd_reportc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    android:background="#CCCCCC"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:background="@drawable/bg_ln_reportc"
        android:padding="5dp">
<LinearLayout
    android:id="@+id/ln_masalah"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_masalah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Trombosit"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="#000000"/>
</LinearLayout>
        <LinearLayout
            android:id="@+id/ln_tglmasalah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_tglmasalah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="30 Agustus 2020"
                android:textSize="@dimen/_12sdp"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_jammasalah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_jammasalah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="14.22"
                android:textSize="@dimen/_12sdp"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
